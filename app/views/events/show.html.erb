 <h1>Shows Details</h1>

<%= button_to 'attend', event_attendees_path(event_id: @event.id), method: :post %>
<%= button_to 'unattend', event_attendees_path(event_id: @event_attendee.id), method: :delete, data: { turbo_confirm: 'Are you sure you want to unattend this event?' } %>

<ul>
  <li><%= @event.date %></li> 
  <li><%= @event.location %></li>
</ul>


    <% @event_attendees.each do |event_attendee| %>
      <% if @event.id == event_attendee.attended_event_id %>
      <ul>
        <li><%= event_attendee.attendee_id %></li>
      </ul>
      <% end %>
    <% end %>

    <% if @event.creator_id == current_user.id %>
      <%= link_to 'edit', edit_event_path(event_id: @event.id) %>

      <%= button_to 'Delete Event', event_path(@event), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this event?' }, class: 'btn' %>
    <% end %>


